---
import type { OpenGraphBookMetadata } from '../../types';

export type Props = OpenGraphBookMetadata;

const { authors, isbn, releaseDate, tags } = Astro.props;
---

{
  authors && authors.map(author => (
    <meta
      property="book:author"
      content={author}
    />
  ))
}
{
  isbn && (
    <meta
      property="book:isbn"
      content={isbn}
    />
  )
}
{
  releaseDate && (
    <meta
      property="book:release_date"
      content={releaseDate}
    />
  )
}
{
  tags && tags.map(tag => (
    <meta
      property="book:tag"
      content={tag}
    />
  ))
}
