---
import type { TwitterMetadata } from '../../types';

export type Props = TwitterMetadata;

const { title, description, site, card, creator, image } = Astro.props;
---

{
  title && (
    <meta
      property="twitter:title"
      content={title}
    />
  )
}
{
  description && (
    <meta
      property="twitter:description"
      content={description}
    />
  )
}
{
  site && (
    <meta
      property="twitter:site"
      content={site}
    />
  )
}
{
  creator && (
    <meta
      property="twitter:creator"
      content={creator}
    />
  )
}
{
  card && (
    <meta
      property="twitter:card"
      content={card}
    />
  )
}
{
  image?.url && (
    <meta
      property="twitter:image"
      content={image.url}
    />
  )
}
{
  image?.alt && (
    <meta
      property="twitter:image:alt"
      content={image.alt}
    />
  )
}
