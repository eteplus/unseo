---
import type { OpenGraphMusicAlbumMetadata } from '../../types';

export type Props = OpenGraphMusicAlbumMetadata;

const { songs, musicians, releaseDate } = Astro.props;
---

{
  songs && songs.map(song => (
    <Fragment>
      <meta
        property="music:song"
        content={song.url}
      />
      {song.disc && (
        <meta
          property="music:song:disc"
          content={song.disc.toString()}
        />
      )}
      {song.track && (
        <meta
          property="music:song:track"
          content={song.track.toString()}
        />
      )}
    </Fragment>
  ))
}
{
  musicians && musicians.map(musician => (
    <meta
      property="music:musician"
      content={musician}
    />
  ))
}
{
  releaseDate && (
    <meta
      property="music:release_date"
      content={releaseDate}
    />
  )
}
